# Pupulik App Configuration
# Copy this file to .env and add your actual keys

# Groq API Configuration
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Encryption Configuration
# Generate a strong 32-character encryption key
VAULT_ENCRYPTION_KEY=your_32_character_encryption_key_here

# App Configuration
APP_NAME=Pupulik
APP_VERSION=1.0.0
ENVIRONMENT=production

# Payment Configuration (iOS)
# Configure in App Store Connect
IOS_PRODUCT_ID=com.pupulik.premium_scan

# Payment Configuration (Android)
# Configure in Google Play Console
ANDROID_PRODUCT_ID=com.pupulik.premium_scan

# Debug Configuration
DEBUG=false
LOG_LEVEL=info